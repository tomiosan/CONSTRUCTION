<div class="row offset-1 col-10 mt-3">
  <table>
    <thead>
      <tr>
        <th>工事ID</th>
        <th>工事名</th>
        <th>現場住所</th>
        <th>現場説明</th>
　　　　<th>工事日</th>
        <th>工事ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% site.each do |site| %>
      <tr>
        <td><%= site.id %></td>
        <td><%= link_to site.site_name, admin_site_path(site.id) %></td>
        <td><%= site.site_address %></td>
        <td><%= site.introduction %></td>
        <td><%= site.day %></td>
        <% if site.site_status? %>
         <td class="text_success"><strong>工事中</strong></td>
        <% else %>
         <td class="text_secondary"><strong>工事休止中</strong></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>